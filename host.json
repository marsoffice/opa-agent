{
    "version": "2.0",
    "customHandler": {
        "enableForwardingHttpRequest": true,
        "description": {
            "defaultExecutablePath": "%executablePath%",
            "workingDirectory": ".",
            "arguments": [
                "run",
                "--config-file",
                "opa/opa-conf.yaml",
                "--server",
                "--log-level",
                "info",
                "--addr",
                ":%FUNCTIONS_CUSTOMHANDLER_PORT%"
            ]
        }
    },
    "extensions": {
        "http": {
            "routePrefix": ""
        }
    }
}