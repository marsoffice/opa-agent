{
    "bindings": [
        {
            "type": "httpTrigger",
            "direction": "in",
            "name": "req",
            "route": "{*restOfPath}",
            "authLevel": "function",
            "methods": [
                "get",
                "post",
                "put",
                "delete",
                "options"
            ]
        },
        {
            "type": "http",
            "direction": "out",
            "name": "res"
        }
    ]
}